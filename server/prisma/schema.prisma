generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id            Int     @id @default(autoincrement())
  username      String  @unique
  password      String
  groupId       Int?
  group         Group?  @relation(fields: [groupId], references: [id])
  gamesAsPlayerA Game[] @relation("gamesAsPlayerA")
  gamesAsPlayerB Game[] @relation("gamesAsPlayerB")
  gamesWon       Game[] @relation("gamesWon")
}

model Game {
  id        Int      @id @default(autoincrement())
  playerAId Int
  playerBId Int
  winnerId  Int?
  createdAt DateTime @default(now())

  playerA User @relation("gamesAsPlayerA", fields: [playerAId], references: [id])
  playerB User @relation("gamesAsPlayerB", fields: [playerBId], references: [id])
  winner  User? @relation("gamesWon", fields: [winnerId], references: [id])
}
